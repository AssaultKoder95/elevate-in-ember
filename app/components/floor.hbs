<div class="row">
    <div class="col-10">
        <div class="row lift-row">
            <div class="col-2 btn-group-vertical">
                {{#unless @floor.isLast}}
                <button {{on 'click' (fn @handleUp @floor.number)}} class="btn btn-primary">Up</button>
                {{/unless}}
                {{#unless @floor.isFirst}}
                <button {{on 'click' (fn @handleDown @floor.number)}} class="btn btn-warning">Down</button>
                {{/unless}}
            </div>
            <div class="col">
                {{#if @floor.hasLiftA}}
                <div class="lift"></div>
                {{/if}}
            </div>
            <div class="col">
                {{#if @floor.hasLiftB}}
                <div class="lift"></div>
                {{/if}}
            </div>
            <div class="col">
                {{#if @floor.hasLiftC}}
                <div class="lift"></div>
                {{/if}}
            </div>
        </div>
        <hr style="border-top: .25rem solid black;">
    </div>
    <div class="col-2"><span style="bottom:0rem; position:absolute">Floor {{@floor.number}}</span></div>
</div>